<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- Banner at top -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:cardElevation="6dp"
        app:cardCornerRadius="12dp"
        app:useCompatPadding="true">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:src="@drawable/evconnect_banner"
            android:contentDescription="EVConnect Banner" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/offlineWarning"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFCC00"
        android:textColor="#000"
        android:padding="8dp"
        android:text="⚠️ Offline mode: You cannot create bookings"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tvNoBookings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="No bookings found"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#888"
        android:padding="16dp"
        android:visibility="gone"/>

    <!-- RecyclerView below banner -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view_bookings"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="8dp"/>
</LinearLayout>

